<h2 class="text-3xl font-bold mb-6 text-center">Edit <%= resource_name.to_s.humanize %></h2>

<div class="flex justify-center items-center min-h-screen">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'space-y-4' }) do |f| %>
      
      <%= render "devise/shared/error_messages", resource: resource, class: 'mb-4' %>

      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-gray-700 text-sm">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: 'block text-gray-700 text-sm font-semibold mb-2' %> 
        <i class="text-gray-500 text-sm">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500 mt-1' %>
        <% if @minimum_password_length %>
          <em class="text-gray-600 text-sm mt-1"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: 'block text-gray-700 text-sm font-semibold mb-2' %> 
        <i class="text-gray-500 text-sm">(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500 mt-1' %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Update", class: 'px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500' %>
      </div>
    <% end %>

    <h3 class="text-xl font-bold mt-8 text-center">Cancel my account</h3>
    <div class="text-center">
      Unhappy? 
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'mt-4 px-4 py-2 bg-red-600 text-white font-semibold rounded-lg shadow-md hover:bg-red-700 focus:outline-none focus:ring focus:ring-red-500 focus:border-red-500' %>
    </div>

    <div class="mt-4 text-center">
      <%= link_to "Back", :back, class: 'text-blue-500 hover:underline' %>
    </div>
  </div>
</div>
