<div class="flex justify-center items-center min-h-0">
<div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
  <h2 class="text-3xl font-bold text-center">Log in</h2>
  
      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: 'form-checkbox' %>
          <%= f.label :remember_me, class: 'ml-2 text-gray-700 text-sm' %>
        </div>
      <% end %>

      <div class="flex items-center justify-between">
        <%= f.submit "Log in", class: 'px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500' %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: 'mt-4 text-center' %>
  </div>
</div>
