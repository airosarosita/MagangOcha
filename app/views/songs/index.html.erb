<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Songs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Songs</h1>
    <%= link_to "New song", new_song_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="songs" class="min-w-full mt-5">
  <table class="min-w-full bg-white">
    <thead>
      <tr>
        <th class="py-2 px-8 bg-gray-200 text-left">Title</th>
        <th class="py-2 px-8 bg-gray-200 text-left">Artist</th>
        <th class="py-3 px-8 bg-gray-200 text-left">Release</th>
        <th class="py-2 px-8 bg-gray-200 text-left">Composer</th>
        <th class="py-2 px-8 bg-gray-200 text-left">Producer</th>
      </tr>
    </thead>

  <div id="songs" class="min-w-full">
    <% @songs.each do |song| %>
      <tr class="cursor-pointer hover:bg-gray-100" onclick="window.location='<%= song_path(song) %>'">
          <td class="border-t py-3 px-1"><%= song.title %></td>
          <td class="border-t py-3 px-1"><% song.artists.each do|artist|%>
      <%= artist.name%>
    <% end %>
          <td class="border-t py-3 px-1"><%= song.release %></td>
          <td class="border-t py-3 px-1"><%= song.composer %></td>
          <td class="border-t py-3 px-1"><%= song.producer %></td>
        </tr>
    <% end %>
  </div>
</div>
