<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Dashboards" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Dashboards</h1>
    <%= link_to "New dashboard", new_client_dashboard_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="client_dashboards" class="min-w-full">
    <% @client_dashboards.each do |client_dashboard| %>
      <%= render client_dashboard %>
      <p>
        <%= link_to "Show this dashboard", client_dashboard, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
