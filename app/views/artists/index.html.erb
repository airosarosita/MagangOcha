<div class="w-full">
  <% if notice.present? %>
    <p class="py-3 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Artists" %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl">Artists</h1>
    <%= link_to "New Artist", new_artist_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
  </div>

  <table class="min-w-full bg-white">
    <thead>
      <tr>
        <th class="py-2 px-8 bg-gray-200 text-left">Name</th>
        <th class="py-2 px-8 bg-gray-200 text-left">Year</th>
        <th class="py-3 px-8 bg-gray-200 text-left">Nationality</th>
        <th class="py-2 px-8 bg-gray-200 text-left">Biography</th>
      </tr>
    </thead>
    
    <tbody id="artists">
      <% @artists.each do |artist| %>
        <tr class="cursor-pointer hover:bg-gray-100" onclick="window.location='<%= artist_path(artist) %>'">
          <td class="border-t py-3 px-1"><%= artist.name %></td>
          <td class="border-t py-3 px-1"><%= artist.year %></td>
          <td class="border-t py-3 px-1"><%= artist.nationality %></td>
          <td class="border-t py-3 px-1"><%= artist.biography %></td>
          </td
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
