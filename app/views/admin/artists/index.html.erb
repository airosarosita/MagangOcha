<div class="w-full p-6 bg-blue-50 min-h-screen">
  <% if notice.present? %>
    <p class="py-3 px-4 bg-blue-100 mb-5 text-blue-600 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Artists" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-blue-600">Artists</h1>
    <%= link_to "New Artist", new_artist_path, class: "rounded-lg py-3 px-6 bg-blue-600 text-white font-medium shadow-lg hover:bg-blue-700 transition duration-300" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @artists.each do |artist| %>
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer border border-blue-200" onclick="window.location='<%= artist_path(artist) %>'">
        <h2 class="text-xl font-semibold mb-2 text-black-800"><%= artist.name %></h2>
        <p class="text-black-600 mb-1"><strong>Year:</strong> <%= artist.year %></p>
        <p class="text-black-600"><strong>Nationality:</strong> <%= artist.nationality %></p>
      </div>
    <% end %>
  </div>
</div>
